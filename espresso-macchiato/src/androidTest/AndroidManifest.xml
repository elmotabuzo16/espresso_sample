<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.nenick.espressomacchiato.test">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.SET_ANIMATION_SCALE" />

    <application
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light"
        tools:replace="android:label">
        <activity android:name=".views.BaseActivity" />
        <activity
            android:name=".views.LandscapeFixedActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".views.NavigationDrawerActivity" />
        <activity android:name=".views.OnActivityResultActivity" />
        <activity android:name=".views.LongListActivity" />
        <activity android:name=".views.LongRecyclerActivity" />
        <activity android:name=".views.CollapsingToolbarActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
    </application>

</manifest>
